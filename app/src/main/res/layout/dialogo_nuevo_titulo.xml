<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nuevo_titulo_centro"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="26dp"
        android:ems="10"
        android:hint="@string/hint_titulo_centro"
        android:inputType="textPersonName"
        android:paddingLeft="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nuevo_titulo_nombre"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_titulo_titulo"
        android:inputType="textPersonName"
        android:paddingLeft="12sp"
        app:layout_constraintEnd_toEndOf="@+id/nuevo_curso_nombre"
        app:layout_constraintStart_toStartOf="@+id/nuevo_titulo_centro"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_titulo_centro" />

    <EditText
        android:id="@+id/nuevo_titulo_rama"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_titulo_rama"
        android:inputType="textPersonName"
        android:paddingLeft="12sp"
        app:layout_constraintEnd_toEndOf="@+id/nuevo_titulo_nombre"
        app:layout_constraintStart_toStartOf="@+id/nuevo_titulo_nombre"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_titulo_nombre" />

    <EditText
        android:id="@+id/nuevo_titulo_nota"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/hint_titulo_nota"
        android:inputType="number|numberDecimal"
        android:paddingLeft="12sp"
        app:layout_constraintEnd_toEndOf="@+id/nuevo_titulo_rama"
        app:layout_constraintStart_toStartOf="@+id/nuevo_titulo_rama"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_titulo_rama" />

    <EditText
        android:id="@+id/nuevo_titulo_descripcion"
        android:layout_width="325dp"
        android:layout_height="135dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/hint_titulo_descripcion"
        android:inputType="textLongMessage|textMultiLine|textPersonName"
        android:paddingLeft="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nuevo_titulo_nota"
        app:layout_constraintStart_toStartOf="@+id/nuevo_titulo_nota"
        app:layout_constraintTop_toBottomOf="@+id/nuevo_titulo_nota" />

</androidx.constraintlayout.widget.ConstraintLayout>