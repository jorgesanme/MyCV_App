<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/new_laboral_cargo"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="Cargo o Puesto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/new_laboral_empresa"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Empresa "
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/new_laboral_cargo"
        app:layout_constraintStart_toStartOf="@+id/new_laboral_cargo"
        app:layout_constraintTop_toBottomOf="@+id/new_laboral_cargo" />

    <EditText
        android:id="@+id/new_laboral_direccion"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Direccion de la empresa"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/new_laboral_empresa"
        app:layout_constraintStart_toStartOf="@+id/new_laboral_empresa"
        app:layout_constraintTop_toBottomOf="@+id/new_laboral_empresa" />

    <EditText
        android:id="@+id/new_laboral_periodo"
        android:layout_width="344dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="DuraciÃ³n en el puesto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/new_laboral_direccion"
        app:layout_constraintStart_toStartOf="@+id/new_laboral_direccion"
        app:layout_constraintTop_toBottomOf="@+id/new_laboral_direccion" />

    <EditText
        android:id="@+id/new_laboral_descripcion"
        android:layout_width="344dp"
        android:layout_height="135dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Descripcion del puesto"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/new_laboral_periodo"
        app:layout_constraintStart_toStartOf="@+id/new_laboral_periodo"
        app:layout_constraintTop_toBottomOf="@+id/new_laboral_periodo" />
</androidx.constraintlayout.widget.ConstraintLayout>